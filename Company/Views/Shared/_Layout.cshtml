<script>
    function convertObjectToFormData(obj, form, namespace) {



        var fd = form || new FormData();

        var formKey;



        for (var property in obj) {

            if (obj.hasOwnProperty(property)) {



                if (namespace) {

                    formKey = namespace + '[' + property + ']';

                } else {

                    formKey = property;

                }





                if (typeof obj[property] === 'object' && !(obj[property] instanceof File) && !(obj[property] instanceof FileList)) {

                    convertObjectToFormData(obj[property], fd, formKey);

                } else {

                    if (obj[property] instanceof FileList) {

                        for (var value of obj[property]) {

                            fd.append(formKey, value, value.name);

                        }

                    } else if (obj[property] instanceof File) {

                        // it's a File object

                        fd.append(formKey, obj[property], obj[property].name);

                    } else {

                        //it's a string

                        fd.append(formKey, obj[property]);

                    }

                }



            }

        }



        return fd;



    };

</script>
